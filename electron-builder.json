{
  "appId": "com.ai-ssh-tool.app",
  "productName": "AI SSH Tool",
  "copyright": "Copyright Â© 2024 AI SSH Tool Contributors",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "electronDownload": {
    "cache": "node_modules/.cache/electron"
  },
  "files": [
    "dist/**/*",
    "package.json",
    {
      "from": "node_modules",
      "to": "node_modules",
      "filter": [
        "better-sqlite3/**/*",
        "ssh2/**/*",
        "ssh2-sftp-client/**/*",
        "tree-sitter/**/*",
        "tree-sitter-bash/**/*",
        "web-tree-sitter/**/*",
        "chokidar/**/*",
        "generic-pool/**/*",
        "iconv-lite/**/*",
        "jschardet/**/*",
        "!**/test/**",
        "!**/tests/**",
        "!**/docs/**",
        "!**/examples/**",
        "!**/demo/**",
        "!**/samples/**",
        "!**/*.md",
        "!**/README*",
        "!**/LICENSE*",
        "!**/CHANGELOG*",
        "!**/HISTORY*",
        "!**/.git*",
        "!**/.npm*",
        "!**/tsconfig.json",
        "!**/webpack.config.js",
        "!**/rollup.config.js",
        "!**/jest.config.js",
        "!**/.eslint*",
        "!**/.prettier*",
        "!**/yarn.lock",
        "!**/package-lock.json",
        "!**/*.map",
        "!**/*.d.ts.map"
      ]
    }
  ],
  "extraResources": [
    {
      "from": "node_modules/tree-sitter-bash/tree-sitter-bash.wasm",
      "to": "resources"
    },
    {
      "from": "node_modules/web-tree-sitter/tree-sitter.wasm",
      "to": "resources"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publisherName": "AI SSH Tool Team",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI SSH Tool",
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true,
    "menuCategory": "Development",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "displayLanguageSelector": true,
    "installerLanguages": [
      "en_US",
      "zh_CN"
    ],
    "language": "2052"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "compression": "maximum",
  "removePackageScripts": true,
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "npmRebuild": false,
  "asar": {
    "smartUnpack": true,
    "ordering": "dist/main/main.js"
  },
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/tree-sitter/**/*",
    "node_modules/tree-sitter-bash/**/*",
    "node_modules/web-tree-sitter/**/*"
  ],
  "includeSubNodeModules": false,
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "ai-ssh-tool"
  }
}