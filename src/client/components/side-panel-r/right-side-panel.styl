@require '../../css/includes/theme-default'

.right-side-panel
  position absolute
  right 0
  top 0
  bottom 0
  z-index 200
  background main
  color text-light
  border-left 1px solid darken(main, 30%)

  .drag-handle
    left 0
    right auto
    display block

.right-side-panel-controls
  position absolute
  left 10px
  top 10px
  color text-dark
  font-size 16px
  &:hover
    color text
    cursor pointer
  &.right-side-panel-pin
    left 30px
    &.pinned
      color success
.right-side-panel-content
  padding 10px
  overflow-y scroll
  position absolute
  left 0
  top 30px
  right 0
  bottom 0
.animate-fast
  animation-duration .2s